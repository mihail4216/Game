<Gb@Button>:
    font_size: 32
<qwer>:
    id:wer
    BoxLayout:
        button:
<RapLayout>:
    id:rep
    display: entry
    rows:5
    padding:10
    spacing:10
    BoxLayout:
        Label:
            text:'Click on a word to change it!'
    BoxLayout:
        display:word
        Gb:
            id:word
            text:  root.t_random_word()
            on_press: ver.text=root.t_random_word()

    BoxLayout:
        TextInput:
            id: ver
            font_size:32



    BoxLayout:
        TextInput:
            id: entry
            hint_text: "Enter Word"
            font_size: 32
            multiline: False
    BoxLayout:

        Label:
            font_size: 32
            text: 'verno:'+''
    BoxLayout:
        Gb:
            text: "check"
            on_press: rep.check()
