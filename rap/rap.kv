<Gb@Button>:
    font_size: 32

<RapLayout>:
    id:rep
    display: entry
    rows:5
    padding:10
    spacing:10
    BoxLayout:
        Label:
            text:'Click on a word to change it!'
    BoxLayout:
        display:word
        Gb:
            id:word
            text:  root.t_random_word()
            on_press: word.text=root.t_random_word()


    BoxLayout:
        TextInput:
            id: entry
            hint_text: "Enter Word"
            font_size: 32
            multiline: False

    BoxLayout:

        Label:

            font_size: 32
            text: 'verno:'
        Label:
            id:tre
            font_size:32
            text:'0'

    BoxLayout:
        Gb:
            text: "check"
            on_press:entry.text=''
            on_press:word.text=root.t_random_word()
            on_press: tre.text=str(int(tre.text)+int(root.check(word.text,entry.text)))

