<Cb@Button>:
    font_size: 32

<ClacLayout>:
    id:calculator
    display: entry
    rows:5
    padding:10
    spacing:10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
    BoxLayout:
        spacing:10
        Cb:
            text:"7"
            on_press: entry.text+=self.text
        Cb:
            text:"8"
            on_press: entry.text+=self.text
        Cb:
            text:"9"
            on_press: entry.text+=self.text
        Cb:
            text:"+"
            on_press: entry.text+=self.text
    BoxLayout:
        spacing:10
        Cb:
            text:"4"
            on_press: entry.text+=self.text
        Cb:
            text:"5"
            on_press: entry.text+=self.text
        Cb:
            text:"6"
            on_press: entry.text+=self.text
        Cb:
            text:"-"
            on_press: entry.text+=self.text
    BoxLayout:
        spacing:10
        Cb:
            text:"1"
            on_press: entry.text+=self.text
        Cb:
            text:"2"
            on_press: entry.text+=self.text
        Cb:
            text:"3"
            on_press: entry.text+=self.text
        Cb:
            text:"*"
            on_press: entry.text+=self.text
    BoxLayout:
        spacing:10
        Cb:
            text:"AC"
            on_press: entry.text=""
        Cb:
            text:"0"
            on_press: entry.text+=self.text
        Cb:
            text:"="
            on_press: calculator.Calculate(entry.text)
        Cb:
            text:"/"
            on_press: entry.text+=self.text